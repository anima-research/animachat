{
  "name": "deprecated-claude-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "build": "npm run build -w shared && npm run build -w backend && npm run build -w frontend",
    "test": "npm run test --workspaces",
    "test:watch": "concurrently \"npm run test:watch -w backend\" \"npm run test:watch -w frontend\" \"npm run test:watch -w shared\"",
    "test:coverage": "npm run test:coverage --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@types/compression": "^1.8.1",
    "@types/multer": "^2.0.0",
    "compression": "^1.8.1",
    "multer": "^2.0.2"
  }
}
